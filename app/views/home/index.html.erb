<%= render 'layouts/navbar' %>

<!-- Page Content -->
<div class="container">

    <!-- Page Heading -->
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">All Famous Books
            </h1>
        </div>
    </div>

    <!-- Projects Row -->
    <div class="row">
        <% @paginatable_array.each do |info| %>
            <div class="col-sm-6 col-md-6 col-lg-4 portfolio-item">
                <a href="#">
                    <img class="img-responsive" src="http://placehold.it/750x450" alt="">
                </a>
                <br>   
                  <div class="table-responsive">
                    <table class="table">
                        <tr>
                            <td class="col-md-3 col-lg-3"><b>Title:</b></td>
                            <td class="col-md-9 col-lg-9"><%= null?(info["title"]) %></td>
                        </tr>
                        <tr>
                            <td class="col-md-3 col-lg-3"><b>Author:</b></td> 
                            <td class="col-md-9 col-lg-9"><%= null?(info["author"]) %></td>
                        </tr>
                        <tr>
                            <td class="col-md-3 col-lg-3"><b>Year:</b> </td>
                            <td class="col-md-9 col-lg-9"><%= null?(info["year"]) %></td>
                        </tr>
                        <tr>
                            <td class="col-md-3 col-lg-3"><b>ISBN:</b> </td>
                            <td class="col-md-3 col-lg-9"><%= null?(info["isbn"]) %></td>
                        </tr>
                    </table>
                  </div>
            </div>
        <% end %>
    </div>
    <!-- /.row -->

    <hr>

    <div class="text-center">
        <%= paginate @paginatable_array, :theme => 'twitter-bootstrap-3', :pagination_class => "pagination-small pagination-centered
        " %>
    </div>

    <hr>

    <%= render 'layouts/footer' %>


</div>